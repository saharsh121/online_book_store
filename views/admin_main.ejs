<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Admin Dashboard</title>
  <link rel="stylesheet" href="/css/style.css">
</head>

<body>

  <div class="container">
    <h2 class="page-title" align="center">Admin</h2>

    <div class="button-group">

      <!-- Upload New Book -->
      <form action="/admin/upload-book" method="get">
        <button type="submit" class="primary-btn">
          Upload New Book
        </button>
      </form>

      <!-- Show Ordered Book Details -->
      <form action="/admin/orders" method="get">
        <button type="submit" class="secondary-btn">
          Ordered Book Details
        </button>
      </form>

    </div>
  </div>

</body>
</html>
